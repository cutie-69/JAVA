//Exzero2.java
class Exzero2
{
public static void main(String args[])
{
int a, d;
try
{
d = 0;
a = 42/d;
System.out.println("The division result is :-"+a);
//the call to println() inside the try block is never executed
} catch (ArithmeticException e) // catch divide by zero error
{
System.out.println("Exception :- "+e); //Display description of exception
System.out.println("Division by zero is not allowed");
} finally
{
// This block always executes, regardless of exception
System.out.println("Finally block executed");
}
System.out.println("After catch statement");
}
}

//Throwsex.java
public class DivisionByZeroThrows
{
public static void main(String[] args) throws ArithmeticException
{
int a = 10;
int b = 0;
// This will cause ArithmeticException (unchecked)
int result = a / b;
System.out.println("Result: " + result); // Will not run if exception occurs
}

//Throwsex2.java
import java.util.Scanner;
class Throwsex2
{
public static void main(String args[]) throws ArithmeticException, ArrayIndexOutOfBoundsException
{
Scanner sc = new Scanner(System.in);
int arr[] = {10, 20, 30, 40, 50};
System.out.print("Enter array index number which is to be divided: ");
int index = sc.nextInt(); // may throw ArrayIndexOutOfBoundsException
System.out.print("Enter divisor: ");
int divisor = sc.nextInt(); // may be zero
int result = arr[index] / divisor; // may throw ArithmeticException
System.out.println("Result = " + result);
sc.close();
}
}
}
